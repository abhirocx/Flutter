<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin5x1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/body">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="false"
            android:layout_margin="@dimen/margin5x2"
            app:cardPreventCornerOverlap="false"
            android:clickable="false"
            app:cardCornerRadius="@dimen/padding4x2">

            <ImageView
                android:layout_width="@dimen/et_height_60"
                android:layout_height="@dimen/dimen10x6"
                android:id="@+id/imgUser"
                android:clickable="false"
                android:src="@drawable/user_photo"
                android:contentDescription="@string/user" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5x2"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/trainerTypeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:visibility="gone"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_color_border_drawable"
                        android:clickable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:id="@+id/trainerType"
                        android:fontFamily="@font/lato"
                        android:paddingTop="@dimen/dimen3x1"
                        android:paddingBottom="@dimen/dimen3x1"
                        android:paddingStart="@dimen/padding3x4"
                        android:paddingEnd="@dimen/padding3x4"
                        android:text="@string/_public"
                        android:textColor="@color/radio_text_color"
                        android:textSize="@dimen/text_sp12"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/background" />
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/margin5x2"
                    android:paddingStart="@dimen/zero"
                    android:textColor="@color/black"
                    android:text="@string/n_a"
                    android:clickable="false"
                    android:textSize="@dimen/text_sp18"
                    android:id="@+id/name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/trainerTypeLayout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3.5"
                android:max="5"
                android:id="@+id/rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:progressTint="@color/orange"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin5x2"
                android:layout_marginBottom="@dimen/margin5x2"
                android:weightSum="2.5">
                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_sp14"
                    android:clickable="false"
                    android:id="@+id/txtDistance"
                    android:drawablePadding="@dimen/margin5x1"
                    android:drawableStart="@drawable/ic_user_location"
                    android:text="@string/s_km_away"/>
                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:clickable="false"
                    android:id="@+id/etMobile"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_sp14"
                    android:drawablePadding="@dimen/margin5x1"
                    android:drawableStart="@drawable/ic_call_blue"
                    android:text="@string/n_a"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        app:layout_constraintTop_toBottomOf="@id/body"
        android:background="@color/divider_color" />

</androidx.constraintlayout.widget.ConstraintLayout>