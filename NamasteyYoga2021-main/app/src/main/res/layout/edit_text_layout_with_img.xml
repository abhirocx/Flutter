<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin5x3"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/lato_bold"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="@dimen/margin5x2"
            android:paddingTop="@dimen/margin5x1"
            android:paddingBottom="@dimen/margin5x1"
            android:paddingEnd="@dimen/margin5x2"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_sp14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/supportImg"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_eye"
            android:id="@+id/supportImg"
            android:layout_marginEnd="@dimen/margin5x2"
            android:contentDescription="@string/drawable"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            app:layout_constraintTop_toBottomOf="@id/editText"
            android:layout_marginStart="@dimen/margin5x2"
            android:layout_marginTop="@dimen/margin5x1"
            android:layout_marginEnd="@dimen/margin5x2"
            android:background="@color/divider_color" />
    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>