<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/dataLayout"
        android:layout_marginTop="@dimen/padding4x2"
        android:weightSum="4.6"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1.6"
            tools:ignore="UseCompoundDrawables">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_trophy"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/trophy"
                android:visibility="visible"
                android:contentDescription="@string/trophy"/>
            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding3x4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/trophy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/black"
                android:id="@+id/dateTxt"
                android:singleLine="true"
                android:textSize="@dimen/text_sp14"
                android:fontFamily="@font/lato_bold"
                android:text="@string/n_a"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/_0"
                android:id="@+id/txtSteps"
                android:singleLine="true"
                android:textSize="@dimen/text_sp16"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="@dimen/margin5x3"
                android:contentDescription="@string/trophy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin5x1"
                android:fontFamily="@font/lato"
                android:text="@string/steps"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/text_sp16" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/_0"
                android:id="@+id/txtCalories"
                android:singleLine="true"
                android:textSize="@dimen/text_sp16"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="@dimen/margin5x3"
                android:contentDescription="@string/trophy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin5x1"
                android:fontFamily="@font/lato"
                android:text="@string/calories"
                android:maxLength="3"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/text_sp16" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/_0"
                android:textSize="@dimen/text_sp16"
                android:id="@+id/txtDistance"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="@dimen/margin5x3"
                android:contentDescription="@string/trophy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin5x1"
                android:fontFamily="@font/lato"
                android:text="@string/km"
                android:singleLine="true"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/text_sp16" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:id="@+id/titleBorder"
        android:layout_marginTop="@dimen/padding4x2"
        app:layout_constraintTop_toBottomOf="@id/dataLayout"
        android:background="@color/grey" />
</androidx.constraintlayout.widget.ConstraintLayout>