<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/et_width_220"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/margin5x2"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_width_130"
        android:layout_marginTop="@dimen/margin5x1"
        android:layout_marginBottom="@dimen/margin5x1"
        android:layout_marginEnd="@dimen/margin5x1"
        android:layout_marginStart="@dimen/margin5x2"
        app:cardCornerRadius="@dimen/margin5x2"
        app:cardPreventCornerOverlap="false"
        >

        <ImageView
            android:layout_width="@dimen/et_width_220"
            android:layout_height="@dimen/et_width_130"
            android:scaleType="fitXY"
            android:src="@drawable/ic_place_holder"
            android:id="@+id/image"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:singleLine="true"
        android:layout_marginTop="@dimen/margin5x1"
        android:paddingBottom="@dimen/dimen3x1"
        android:text="@string/n_a"
        android:layout_marginStart="@dimen/margin5x2"
        android:textColor="@color/black"
         />
    <TextView
        android:id="@+id/count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:singleLine="true"
        android:drawablePadding="@dimen/margin5x2"
        android:drawableStart="@drawable/ic_video_count"
        android:layout_marginTop="@dimen/margin5x1"
        android:paddingBottom="@dimen/dimen3x1"
        android:text="@string/exercise"
        android:layout_marginStart="@dimen/margin5x2"
        android:textColor="@color/hint_text_color"
         />



</LinearLayout>