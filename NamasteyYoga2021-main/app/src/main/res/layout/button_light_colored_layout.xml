<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/buttonColorLayout"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/app_gradiant_background_radius"
        android:clickable="false"
        android:focusable="false"
        android:backgroundTint="@color/light_gray_"
        android:id="@+id/buttonColorLayoutTxt"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:padding="@dimen/padding4x2"
        android:text="@string/upcoming_events"
        android:textColor="@color/black_"
        android:textSize="@dimen/text_sp14" />
</LinearLayout>