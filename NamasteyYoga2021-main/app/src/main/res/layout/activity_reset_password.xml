<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:forceDarkAllowed="false"
    android:background="@color/bg_grey"
    tools:context=".ui.resetPassword.ResetPasswordActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:contentDescription="@string/app_gradient_background"
        android:src="@drawable/app_gradiant_background_3"
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding4x4"
        android:layout_marginTop="@dimen/et_height_30"
        android:layout_marginEnd="@dimen/padding4x4"
        android:layout_marginBottom="@dimen/margin5x2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_white"
                android:padding="@dimen/margin5x1"
                app:tint="@color/text_black_"
                android:contentDescription="@string/back"
                android:layout_marginEnd="@dimen/margin5x1"
                android:id="@+id/bigBack"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_black"
                    android:text="@string/reset_password"
                    android:textColor="@color/text_black_"
                    android:textSize="@dimen/text_sp24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding3x4"
                    android:fontFamily="@font/lato_bold"
                    android:paddingStart="@dimen/zero"
                    android:paddingEnd="@dimen/et_height_50"
                    android:text="@string/rest_passwrd_text"
                    android:textColor="@color/text_black_"
                    android:textSize="@dimen/text_sp14" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin5x1"
            android:layout_marginTop="@dimen/et_height_30"
            android:layout_marginEnd="@dimen/margin5x1"
            android:layout_marginBottom="@dimen/margin5x2"
            app:cardCornerRadius="@dimen/padding4x2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin5x4"
                android:orientation="vertical">

                <include layout="@layout/edit_text_otp_layout"
                    android:id="@+id/etOTP"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:text="@string/dont_recv_otp"
                        android:textColor="@color/black" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:paddingTop="@dimen/padding4x2"
                        android:paddingBottom="@dimen/padding4x2"
                        android:paddingStart="@dimen/margin5x1"
                        android:paddingEnd="@dimen/margin5x1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAllCaps="false"
                        android:id="@+id/resendOTP"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="@dimen/text_sp16"
                        android:text="@string/resendOTP"/>
                </LinearLayout>

                <include layout="@layout/edit_text_layout_with_img"
                    android:id="@+id/etPassword"/>
                <include layout="@layout/edit_text_layout_with_img"
                    android:id="@+id/etConfirmPassword"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin5x4"
                    android:layout_height="@dimen/one"/>
                <include layout="@layout/button_colored_layout"
                    android:layout_marginStart="@dimen/margin5x5"
                    android:layout_marginEnd="@dimen/margin5x5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>