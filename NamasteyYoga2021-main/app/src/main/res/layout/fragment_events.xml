<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlEvent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:forceDarkAllowed="false">

    <LinearLayout
        android:id="@+id/llcreateevent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/app_gradiant_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <!--        <ImageView-->
        <!--            android:id="@+id/ivCreateEvent"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_margin="5dp"-->
        <!--            android:background="@drawable/add_event" />-->

        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginLeft="5dp"-->
        <!--            android:text="@string/create_event"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="14sp" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:background="@drawable/app_gradiant_background"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="@string/create_event"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sp18" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llcreateevent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:src="@drawable/ic_left_arrow"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ivBack"
                android:layout_alignLeft="@+id/ivBack"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="start"
                android:text="@string/yoga_events"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding4x1"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:src="@drawable/ic_search_blue"
                android:visibility="visible"
                app:tint="@color/colorPrimaryDark" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_event_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlHeader"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="3">


            <Button
                android:id="@+id/btn_past_event"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/yoga_event_top_deactive_button_background"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="@string/past_events"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_today_event"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/yoga_event_top_deactive_button_background"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="@string/current_events"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_upcoming_event"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:background="@drawable/yoga_event_top_deactive_button_background"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="@string/upcoming_events"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <!--            <Button-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:id="@+id/btn_past_event"-->
            <!--                android:layout_weight="1"-->
            <!--                android:paddingStart="10dp"-->
            <!--                android:paddingLeft="10dp"-->
            <!--                android:paddingEnd="10dp"-->
            <!--                android:paddingRight="10dp"-->
            <!--                android:paddingTop="5dp"-->
            <!--                android:paddingBottom="5dp"-->
            <!--                android:layout_marginStart="3dp"-->
            <!--                android:layout_marginEnd="3dp"-->
            <!--                android:text="@string/past_events"-->
            <!--                android:textAllCaps="false"-->
            <!--                android:background="@drawable/yoga_event_top_deactive_button_background"-->
            <!--                android:textSize="12sp"/>-->

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one"
            android:layout_below="@+id/ll_event_btn"
            android:layout_marginTop="@dimen/padding4x2"
            android:background="@color/light_gray_" />

        <!--EVENTS LIST-->

        <LinearLayout
            android:id="@+id/llevents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/llLogin"
            android:layout_below="@+id/divider"
            android:orientation="vertical">


            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp">

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:background="@color/grey">

                        </LinearLayout>

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="43dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/grey" />


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/llcontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="7"
                                    android:gravity="top"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="top"
                                        android:layout_marginTop="3dp"
                                        android:background="@color/grey" />

                                    <TextView
                                        android:id="@+id/tvAddress"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginLeft="15dp"
                                        android:background="@color/grey"
                                        android:textSize="18sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginRight="15dp"
                                    android:background="@color/grey"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="42dp"
                                        android:layout_height="42dp"
                                        android:background="@color/grey"
                                        android:scaleType="fitXY" />

                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="31dp"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="3dp"
                                    android:background="@color/grey" />

                                <TextView
                                    android:id="@+id/tvEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:background="@color/grey"
                                    android:inputType="textEmailAddress"
                                    android:textSize="18sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="42dp"
                                    android:layout_height="42dp"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="3dp"
                                    android:background="@color/grey" />

                                <TextView
                                    android:id="@+id/tvPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:background="@color/grey"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="31dp"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="3dp"
                                    android:background="@color/grey" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:background="@color/grey"
                                    android:textSize="18sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="3dp"
                                    android:background="@color/grey" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:background="@color/grey"
                                    android:textSize="18sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="7dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="42dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="3dp"
                                    android:background="@color/grey" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:background="@color/grey"
                                    android:textSize="18sp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--cmlkjsdjfshdsf-->


            </com.facebook.shimmer.ShimmerFrameLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/current_event_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/upcoming_event_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/past_event_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

        </LinearLayout>


        <!--NO EVENTS-->
        <LinearLayout
            android:id="@+id/llNoEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="24dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_events" />

            <TextView
                android:id="@+id/tvFirstText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/light_black_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvMiddleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/eventMiddleText"
                android:textColor="@color/light_black_text"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvSecondtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/eventsecondtext"
                android:textColor="@color/light_black_text"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/rlSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_height_40"
                android:layout_gravity="center"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="64dp"
                android:background="@drawable/rounded_corners_orange">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/notify_me"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>


        <!--//////////////////////////////////////////////////////////////////-->
        <!--LOGIN-->
        <LinearLayout
            android:id="@+id/llLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <!--            <ImageView-->
            <!--                android:id="@+id/ivLogin"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_margin="5dp"-->
            <!--                android:visibility="gone"-->
            <!--                android:background="@drawable/login" />-->

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginLeft="5dp"-->
            <!--                android:clickable="false"-->
            <!--                android:text="@string/register_login"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="14sp" />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/app_gradiant_background"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:padding="@dimen/margin5x3"
                android:text="@string/register_login"
                android:textColor="@color/white"
                android:textSize="@dimen/text_sp18" />
        </LinearLayout>


        <!--CREATE EVENT-->


    </RelativeLayout>


</RelativeLayout>