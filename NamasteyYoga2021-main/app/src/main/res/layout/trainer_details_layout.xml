<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    >




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        app:layout_constraintTop_toTopOf="@id/navigation"
        app:layout_constraintBottom_toBottomOf="@id/navigation"
        android:id="@+id/divider"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/bodyLayout"
       app:layout_constraintVertical_bias=".01"
       android:paddingBottom="@dimen/et_height_30"
       app:layout_constraintTop_toTopOf="@id/divider"
       app:layout_constraintStart_toStartOf="parent"
       android:background="@drawable/white_drawable"
       android:orientation="vertical">

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="start|center"
           style="@style/Widget.AppCompat.Button.Borderless.Colored"
           android:paddingTop="@dimen/padding4x2"
           android:paddingBottom="@dimen/padding4x2"
           android:paddingStart="@dimen/margin5x1"
           android:layout_marginStart="@dimen/margin5x3"
           android:paddingEnd="@dimen/margin5x1"
           android:textColor="@color/colorPrimaryDark"
           android:textAllCaps="false"
           android:fontFamily="@font/lato_black"
           android:textSize="@dimen/text_sp16"
           android:text="@string/trainer_details"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingStart="@dimen/margin5x4"
           android:paddingEnd="@dimen/margin5x4"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:id="@+id/body">

           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardUseCompatPadding="false"
               app:cardPreventCornerOverlap="false"
               android:clickable="false"
               app:cardCornerRadius="@dimen/padding4x2">

               <ImageView
                   android:layout_width="@dimen/et_height_60"
                   android:layout_height="@dimen/dimen10x6"
                   android:id="@+id/imgUser"
                   android:clickable="false"
                   android:scaleType="fitXY"
                   android:src="@drawable/ic_place_holder"
                   android:contentDescription="@string/user" />

           </androidx.cardview.widget.CardView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/margin5x3"
               android:layout_marginEnd="@dimen/margin5x2"
               android:orientation="vertical">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:id="@+id/trainerTypeLayout"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="?android:selectableItemBackground"
                       android:orientation="vertical"
                       android:clickable="true"
                       android:focusable="true"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@drawable/gray_color_border_drawable"
                           android:clickable="false"
                           android:enabled="false"
                           android:focusable="false"
                           android:id="@+id/trainerType"
                           android:fontFamily="@font/lato"
                           android:paddingTop="@dimen/dimen3x1"
                           android:paddingBottom="@dimen/dimen3x1"
                           android:paddingStart="@dimen/padding3x4"
                           android:paddingEnd="@dimen/padding3x4"
                           android:text="@string/_public"
                           android:textColor="@color/radio_text_color"
                           android:textSize="@dimen/text_sp12"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toBottomOf="@id/background" />
                   </LinearLayout>

                   <TextView
                       android:layout_width="@dimen/zero"
                       android:layout_height="wrap_content"
                       android:paddingEnd="@dimen/margin5x2"
                       android:paddingStart="@dimen/zero"
                       android:textColor="@color/black"
                       android:text="@string/n_a"
                       android:clickable="false"
                       android:textSize="@dimen/text_sp18"
                       android:id="@+id/name"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintEnd_toStartOf="@id/trainerTypeLayout"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"/>
               </androidx.constraintlayout.widget.ConstraintLayout>
               <RatingBar
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:rating="3.5"
                   android:max="5"
                   android:id="@+id/rating"
                   style="@style/Widget.AppCompat.RatingBar.Small"
                   android:progressTint="@color/orange"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="@dimen/margin5x2"
                   android:layout_marginBottom="@dimen/margin5x2"
                   android:weightSum="2.5">
                   <TextView
                       android:layout_width="@dimen/zero"
                       android:layout_height="wrap_content"
                       android:layout_weight="2.5"
                       android:layout_gravity="center"
                       android:textSize="@dimen/text_sp14"
                       android:clickable="false"
                       android:id="@+id/txtDistance"
                       android:drawablePadding="@dimen/margin5x1"
                       android:drawableStart="@drawable/ic_user_location"
                       android:text="@string/s_km_away"/>


               </LinearLayout>

           </LinearLayout>
       </LinearLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="@dimen/one"
           app:layout_constraintTop_toBottomOf="@id/body"
           android:background="@color/divider_color" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="false"
           android:layout_marginTop="@dimen/margin5x4"
           android:layout_marginStart="@dimen/margin5x4"
           android:layout_marginEnd="@dimen/margin5x4"
           android:id="@+id/etMobile"
           android:layout_gravity="center"
           android:textColor="@color/black"
           android:fontFamily="@font/lato_bold"
           android:textSize="@dimen/text_sp14"
           android:drawablePadding="@dimen/margin5x3"
           android:drawableStart="@drawable/ic_phone_"
           android:text="@string/n_a"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="false"
           android:layout_marginTop="@dimen/margin5x4"
           android:layout_marginStart="@dimen/margin5x4"
           android:layout_marginEnd="@dimen/margin5x4"
           android:id="@+id/etEmailId"
           android:layout_gravity="center"
           android:textColor="@color/black"
           android:fontFamily="@font/lato_bold"
           android:textSize="@dimen/text_sp14"
           android:drawablePadding="@dimen/margin5x3"
           android:drawableStart="@drawable/ic_email"
           android:text="@string/n_a"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:clickable="false"
           android:layout_marginTop="@dimen/margin5x4"
           android:layout_marginStart="@dimen/margin5x4"
           android:layout_marginEnd="@dimen/margin5x4"
           android:id="@+id/etAddress"
           android:layout_gravity="center"
           android:textColor="@color/black"
           android:fontFamily="@font/lato_bold"
           android:textSize="@dimen/text_sp14"
           android:drawablePadding="@dimen/margin5x3"
           android:drawableStart="@drawable/ic_address_"
           android:text="@string/n_a"/>
   </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navigation"
        android:contentDescription="@string/navigation"
        android:layout_marginEnd="@dimen/et_height_30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_location_track"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:contentDescription="@string/share"
        android:layout_marginEnd="@dimen/margin5x2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/navigation"
        android:src="@drawable/ic_share_"/>

</androidx.constraintlayout.widget.ConstraintLayout>