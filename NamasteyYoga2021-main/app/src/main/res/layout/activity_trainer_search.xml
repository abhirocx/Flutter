<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:forceDarkAllowed="false"
    tools:context=".ui.trainer.searchtrainer.TrainerSearchListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/margin5x2"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_close_" />

        <EditText
            android:id="@+id/etSelectTrainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height_40"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:animateLayoutChanges="true"
            android:theme="@style/inputTextTheme"
            android:drawableTint="@color/black"
            android:background="@drawable/white_drawable"
            android:drawableStart="@drawable/search_grey"
            android:drawablePadding="10dp"
            android:hint="@string/type_trainer"
            android:inputType="text"
            android:paddingStart="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <requestFocus/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lstTrainerSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/bg_grey"
        android:layout_marginStart="10dp"
        android:divider="@null"
        tools:listitem="@layout/trainer_item_layout"
        android:dividerHeight="0dp"/>

</LinearLayout>