<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:forceDarkAllowed="false"
    android:background="@color/white"
    tools:context=".ui.onPaperBoard.PaperOnBoardActivity">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <me.relex.circleindicator.CircleIndicator3
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin5x5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/et_height_50"
        app:ci_drawable="@drawable/ic_selected"
        app:ci_drawable_unselected="@drawable/ic_deselect"
        app:ci_margin="@dimen/margin5x2"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/circleIndicator"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_margin="@dimen/margin5x1"
        android:paddingTop="@dimen/padding4x2"
        android:paddingBottom="@dimen/padding4x2"
        android:paddingStart="@dimen/margin5x4"
        android:paddingEnd="@dimen/margin5x1"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/skip"
        android:fontFamily="@font/lato_black"
        android:textSize="@dimen/text_sp16"
        android:text="@string/skip"/>

</androidx.constraintlayout.widget.ConstraintLayout>