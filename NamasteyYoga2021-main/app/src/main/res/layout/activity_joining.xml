<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:forceDarkAllowed="false"
    android:orientation="vertical"
    tools:context=".ui.joiningInstructions.JoiningInstructionsActivity">

    <include layout="@layout/toolbar_black_with_back" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/divider_color"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_margin="@dimen/margin5x2"
        app:layout_constraintBottom_toTopOf="@id/tvIntrested"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5x2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:drawablePadding="@dimen/margin5x3"
                android:fontFamily="@font/lato_bold"
                android:text="@string/joining_instructions"
                android:textColor="@color/black"
                android:textSize="@dimen/text_sp14" />
            <TextView
                android:id="@+id/tvJoiningInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/n_a"
                android:padding="@dimen/margin5x1"
                app:layout_constraintBottom_toTopOf="@id/tvIntrested"
                app:layout_constraintTop_toBottomOf="@id/divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/meetingLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin5x2"
                android:clickable="false"
                android:drawablePadding="@dimen/margin5x3"
                android:fontFamily="@font/lato_bold"
                android:text="@string/meeting_link"
                android:textColor="@color/black"
                android:textSize="@dimen/text_sp14" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/lato_bold"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/meetingLink"
                android:padding="@dimen/margin5x1"
                android:background="?android:selectableItemBackground"
                android:text="@string/n_a"
                android:textColor="@color/blue_header_bottom"
                android:textSize="@dimen/text_sp14" />

            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvIntrested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/app_gradiant_background"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:padding="@dimen/margin5x3"
        android:text="@string/intrested"
        android:textColor="@color/white"
        android:textSize="@dimen/text_sp18"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>