<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_main">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/et_height_30"
                android:orientation="horizontal"
                android:weightSum="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/trainers"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/margin5x1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_drawable"
                        android:backgroundTint="@color/dash_trainer_color"
                        android:clickable="false"
                        android:padding="@dimen/margin5x3"
                        android:src="@drawable/ic_trainers_dash" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin5x3"
                        android:clickable="false"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/yoga_trainer_"
                        android:textColor="@color/text_black_"
                        android:textSize="@dimen/text_sp14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/centers"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/margin5x1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_drawable"
                        android:backgroundTint="@color/dash_center_color"
                        android:clickable="false"
                        android:padding="@dimen/margin5x3"
                        android:src="@drawable/ic_centers_dash" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin5x3"
                        android:clickable="false"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/yoga_center_"
                        android:textColor="@color/text_black_"
                        android:textSize="@dimen/text_sp14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/events"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/margin5x1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_drawable"
                        android:backgroundTint="@color/dash_event_color"
                        android:clickable="false"
                        android:padding="@dimen/margin5x3"
                        android:src="@drawable/ic_events_dash" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin5x3"
                        android:clickable="false"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/yoga_events_"
                        android:textColor="@color/text_black_"
                        android:textSize="@dimen/text_sp14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/health"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/margin5x1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_drawable"
                        android:backgroundTint="@color/dash_health_color"
                        android:clickable="false"
                        android:padding="@dimen/margin5x3"
                        android:src="@drawable/ic_heart_dash" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin5x3"
                        android:clickable="false"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/health_fitness_"
                        android:textColor="@color/text_black_"
                        android:textSize="@dimen/text_sp14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/asanaLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/yogaAsanaHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5x3"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll1">

                    <TextView
                        android:id="@+id/tvAsana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin5x1"
                        android:fontFamily="@font/lato_bold"
                        android:padding="@dimen/dimen_10"
                        android:text="@string/yoga_asana"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_sp16" />

                    <TextView
                        android:id="@+id/tvViewAllAsana"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin5x2"
                        android:background="?android:selectableItemBackground"
                        android:fontFamily="@font/lato_bold"
                        android:padding="@dimen/dimen_10"
                        android:text="@string/view_all"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_sp14" />


                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/yogaAsanaRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/yogaAsanaHeader"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_dashboard_asana_layout" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ayushLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/merchandiseHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5x3"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll1">

                    <TextView
                        android:id="@+id/tvMerchandise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin5x1"
                        android:fontFamily="@font/lato_bold"
                        android:padding="@dimen/dimen_10"
                        android:text="@string/ayush_merchandise"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_sp16" />

                    <TextView
                        android:id="@+id/tvViewAllMerchandise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin5x2"
                        android:background="?android:selectableItemBackground"
                        android:fontFamily="@font/lato_bold"
                        android:padding="@dimen/dimen_10"
                        android:text="@string/view_all"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_sp14" />


                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/merchandiseRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/yogaAsanaHeader"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_dashboard_merchandise_layout" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/celebrityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/celebrityHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5x3"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll1">

                    <TextView
                        android:id="@+id/tvCelebrity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin5x1"
                        android:fontFamily="@font/lato_bold"
                        android:padding="@dimen/dimen_10"
                        android:text="@string/celebrity_testimonial"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_sp16" />

                    <TextView
                        android:id="@+id/tvViewAllCelebrity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin5x2"
                        android:background="?android:selectableItemBackground"
                        android:fontFamily="@font/lato_bold"
                        android:padding="@dimen/dimen_10"
                        android:text="@string/view_all"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_sp14" />


                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/celebrityRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/yogaAsanaHeader"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_dashboard_merchandise_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/othersActivityHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5x3"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll1">

                    <TextView
                        android:id="@+id/others"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin5x1"
                        android:fontFamily="@font/lato_bold"
                        android:padding="@dimen/dimen_10"
                        android:text="@string/other_activities"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_sp16" />

                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:id="@+id/sView"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/margin5x2"
                        android:paddingEnd="@dimen/margin5x3"
                        android:paddingBottom="@dimen/padding4x4"
                        android:id="@+id/activities">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding4x2"
                            android:layout_marginBottom="@dimen/margin5x1"
                            android:layout_marginEnd="@dimen/margin5x1"
                            android:layout_marginStart="@dimen/margin5x1"
                            app:cardCornerRadius="@dimen/margin5x3"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/buvanAppLayout"
                            android:foreground="?android:selectableItemBackground"
                            android:background="?android:selectableItemBackground"
                            app:cardPreventCornerOverlap="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="@dimen/width_110"
                                android:layout_height="@dimen/height_140"
                                android:clickable="false"
                                android:padding="@dimen/margin5x1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/poll"
                                    android:clickable="false"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@id/bhuvanText"
                                    android:layout_marginBottom="@dimen/margin5x2"
                                    android:src="@drawable/bhuvan_logo" />

                                <View
                                    android:layout_width="@dimen/one"
                                    android:layout_height="@dimen/one"
                                    android:id="@+id/dividerFive"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias=".6"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bhuvan_app_"
                                    app:layout_constraintTop_toBottomOf="@id/dividerFive"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:gravity="center"
                                    android:clickable="false"
                                    android:id="@+id/bhuvanText"
                                    android:fontFamily="@font/lato"
                                    android:textSize="@dimen/text_sp14"
                                    android:textColor="@color/text_black_"
                                    android:layout_marginTop="@dimen/margin5x2" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding4x2"
                            android:layout_marginBottom="@dimen/margin5x1"
                            android:layout_marginEnd="@dimen/margin5x1"
                            android:layout_marginStart="@dimen/margin5x1"
                            app:cardCornerRadius="@dimen/margin5x3"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/socialLayout"
                            android:foreground="?android:selectableItemBackground"
                            android:background="?android:selectableItemBackground"
                            app:cardPreventCornerOverlap="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="@dimen/width_110"
                                android:layout_height="@dimen/height_140"
                                android:clickable="false"
                                android:padding="@dimen/margin5x1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/poll"
                                    android:clickable="false"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@id/socialText"
                                    android:layout_marginBottom="@dimen/margin5x2"
                                    android:src="@drawable/social_media" />

                                <View
                                    android:layout_width="@dimen/one"
                                    android:layout_height="@dimen/one"
                                    android:id="@+id/dividerThree"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias=".6"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/social_media_"
                                    app:layout_constraintTop_toBottomOf="@id/dividerThree"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:gravity="center"
                                    android:clickable="false"
                                    android:id="@+id/socialText"
                                    android:fontFamily="@font/lato"
                                    android:textSize="@dimen/text_sp14"
                                    android:textColor="@color/text_black_"
                                    android:layout_marginTop="@dimen/margin5x2" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding4x2"
                            android:layout_marginBottom="@dimen/margin5x1"
                            android:layout_marginEnd="@dimen/margin5x1"
                            android:layout_marginStart="@dimen/margin5x3"
                            app:cardCornerRadius="@dimen/margin5x3"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/pollLayout"
                            android:foreground="?android:selectableItemBackground"
                            android:background="?android:selectableItemBackground"
                            app:cardPreventCornerOverlap="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="@dimen/width_110"
                                android:layout_height="@dimen/height_140"
                                android:clickable="false"
                                android:padding="@dimen/margin5x1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/poll"
                                    android:clickable="false"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/pollText"
                                    android:layout_marginBottom="@dimen/margin5x2"
                                    android:src="@drawable/polls" />

                                <View
                                    android:layout_width="@dimen/one"
                                    android:layout_height="@dimen/one"
                                    android:id="@+id/dividerOne"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias=".6"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/poll"
                                    app:layout_constraintTop_toBottomOf="@+id/dividerOne"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:gravity="center"
                                    android:clickable="false"
                                    android:id="@+id/pollText"
                                    android:fontFamily="@font/lato"
                                    android:textSize="@dimen/text_sp14"
                                    android:textColor="@color/text_black_"
                                    android:layout_marginTop="@dimen/margin5x2" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding4x2"
                            android:layout_marginBottom="@dimen/margin5x1"
                            android:layout_marginEnd="@dimen/margin5x1"
                            android:layout_marginStart="@dimen/margin5x3"
                            app:cardCornerRadius="@dimen/margin5x3"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/quizLayout"
                            android:foreground="?android:selectableItemBackground"
                            android:background="?android:selectableItemBackground"
                            app:cardPreventCornerOverlap="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="@dimen/width_110"
                                android:layout_height="@dimen/height_140"
                                android:clickable="false"
                                android:padding="@dimen/margin5x1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/poll"
                                    android:clickable="false"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/quizText"
                                    android:layout_marginBottom="@dimen/margin5x2"
                                    android:src="@drawable/quiz" />

                                <View
                                    android:layout_width="@dimen/one"
                                    android:layout_height="@dimen/one"
                                    android:id="@+id/dividerTwo"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias=".6"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/quiz"
                                    app:layout_constraintTop_toBottomOf="@id/dividerTwo"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:gravity="center"
                                    android:clickable="false"
                                    android:id="@+id/quizText"
                                    android:fontFamily="@font/lato"
                                    android:textSize="@dimen/text_sp14"
                                    android:textColor="@color/text_black_"
                                    android:layout_marginTop="@dimen/margin5x2" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding4x2"
                            android:layout_marginBottom="@dimen/margin5x1"
                            android:layout_marginEnd="@dimen/margin5x1"
                            android:layout_marginStart="@dimen/margin5x3"
                            app:cardCornerRadius="@dimen/margin5x3"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/feedbackLayout"
                            android:foreground="?android:selectableItemBackground"
                            android:background="?android:selectableItemBackground"
                            app:cardPreventCornerOverlap="false">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="@dimen/width_110"
                                android:layout_height="@dimen/height_140"
                                android:clickable="false"

                                android:padding="@dimen/margin5x1">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/feedback"
                                    android:clickable="false"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/feedbackText"
                                    android:layout_marginBottom="@dimen/margin5x2"
                                    android:src="@drawable/feedback" />

                                <View
                                    android:layout_width="@dimen/one"
                                    android:layout_height="@dimen/one"
                                    android:id="@+id/dividerFour"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias=".6"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/feedback"
                                    app:layout_constraintTop_toBottomOf="@id/dividerFour"
                                    app:layout_constraintStart_toStartOf="parent"
