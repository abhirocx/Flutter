<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:forceDarkAllowed="false"
    android:background="@color/bg_grey"
    tools:context=".ui.login.LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:contentDescription="@string/app_gradient_background"
        android:src="@drawable/app_gradiant_background_3"
        app:layout_constraintBottom_toBottomOf="@id/line1"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding4x4"
        android:layout_marginTop="@dimen/et_height_30"
        android:layout_marginEnd="@dimen/padding4x4"
        android:layout_marginBottom="@dimen/margin5x2"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_white"
            android:padding="@dimen/margin5x1"
            android:visibility="gone"
            android:contentDescription="@string/back"
            android:layout_marginEnd="@dimen/margin5x1"
            android:id="@+id/bigBack"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:text="@string/login"
                android:textColor="@color/text_black_"
                android:textSize="@dimen/text_sp24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3x4"
                android:fontFamily="@font/lato_bold"
                android:paddingStart="@dimen/zero"
                android:paddingEnd="@dimen/et_height_50"
                android:text="@string/please_enter_username_and_password_to_login"
                android:textColor="@color/text_black_"
                android:textSize="@dimen/text_sp14" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin5x1"
        android:layout_marginTop="@dimen/et_height_40"
        android:layout_marginEnd="@dimen/margin5x1"
        android:layout_marginBottom="@dimen/margin5x2"
        app:cardCornerRadius="@dimen/padding4x2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin5x4"
        android:orientation="vertical">
        <include layout="@layout/edit_text_layout"
            android:id="@+id/userId"/>
        <include layout="@layout/edit_text_layout_with_img"
            android:id="@+id/password"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_margin="@dimen/margin5x1"
            android:paddingTop="@dimen/padding4x2"
            android:paddingBottom="@dimen/padding4x2"
            android:paddingStart="@dimen/margin5x4"
            android:paddingEnd="@dimen/margin5x1"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:id="@+id/forgotPassword"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/text_sp16"
            android:text="@string/forgot_password"/>
        <include layout="@layout/button_colored_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin5x5"
            android:layout_marginEnd="@dimen/margin5x5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin5x4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:fontFamily="@font/lato_bold"
                android:text="@string/dont_have_account"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/lato_bold"
                android:padding="@dimen/margin5x1"
                android:background="?android:selectableItemBackground"
                android:text="@string/register_here"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>