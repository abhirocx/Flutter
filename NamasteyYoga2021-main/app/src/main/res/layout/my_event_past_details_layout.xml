        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin5x2"
            android:layout_marginBottom="0dp"
            android:background="@drawable/app_gradiant_background"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:padding="@dimen/margin5x3"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sp18"
            android:visibility="visible" />


    </LinearLayout>

    <ImageView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/et_height_30"
        android:contentDescription="@string/navigation"
        android:src="@drawable/ic_location_track"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin5x2"
        android:contentDescription="@string/share"
        android:src="@drawable/ic_share_"
        app:layout_constraintEnd_toStartOf="@id/navigation"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>