<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@color/status_bar_color</item>
        <item name="android:windowActivityTransitions">true</item>
<!--        <item name="android:windowBackground">@drawable/app_gradiant_background_2</item>-->
        <item name="android:windowBackground">@drawable/splash_</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!--        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>-->
    </style>

    <style name="AppTheme_OnBoard" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@color/status_bar_color</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!--        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>-->
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/enter_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_to_right</item>
    </style>

    <style name="inputTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/version_2_blue</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/black</item>

    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <color name="transparent">#0000ffff</color>

    <style name="PrimaryButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/orange</item>
        <item name="colorControlHighlight">@color/orange_header_menu</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppThemeM" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@color/status_bar_color</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <style name="AppThemeM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/version_2_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/version_2_blue</item>
        <item name="colorControlActivated">@color/version_2_blue</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:radius">20dp</item>
    </style>
    <style name="Style_TextView">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/text_sp16</item>
    </style>
    <style name="textStyleSmall" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_sp16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_sp18</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


</resources>